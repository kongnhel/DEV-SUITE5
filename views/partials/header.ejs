    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <style>
        :root {
            --primary: <%= theme || '#22d3ee' %>; 
            --bg-dark: #020617;
            --magic-glow: rgba(34, 211, 238, 0.3);
        }
        
        body {
            font-family: "Kantumruy Pro", sans-serif;
            background: var(--bg-dark);
            color: #f3f4f6;
            overflow-x: hidden;
        }

        /* áŸ¢. Magic Shimmer & Text Effects */
        .shimmer-text {
            background: linear-gradient(90deg, #fff, var(--primary), #fff);
            background-size: 200% auto;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: shine 5s linear infinite;
        }
        @keyframes shine { to { background-position: 200% center; } }

        .active-link {
            color: var(--primary) !important;
            text-shadow: 0 0 15px var(--primary);
            position: relative;
        }
        .active-link::after {
            content: '';
            position: absolute;
            bottom: -8px; left: 0; width: 100%; height: 2px;
            background: var(--primary);
            box-shadow: 0 0 10px var(--primary);
            border-radius: 99px;
        }

        /* áŸ£. Premium Nav Glassmorphism */
        .nav-glass {
            background: rgba(2, 6, 23, 0.7);
            backdrop-filter: blur(30px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        .user-avatar {
            border: 2px solid var(--primary);
            box-shadow: 0 0 20px var(--magic-glow);
            transition: 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .user-avatar:hover { transform: rotate(10deg) scale(1.1); box-shadow: 0 0 30px var(--primary); }

        /* áŸ¤. Magic Dropdown Logic */
        .dropdown-inner {
            background: rgba(15, 23, 42, 0.9);
            backdrop-filter: blur(40px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 30px;
            padding: 12px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.6);
            transform: translateY(10px);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        .profile-group:hover .dropdown-inner {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        /* áŸ¥. No Scrollbar for Mobile Tools */
        .no-scrollbar::-webkit-scrollbar { display: none; }
        
        /* Promotion Badge */
        .promo-badge {
            background: linear-gradient(135deg, var(--primary), #4f46e5);
            padding: 2px 8px;
            border-radius: 6px;
            font-size: 8px;
            color: #000;
            font-weight: 900;
        }
    </style>
</head>
